<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"> 
      
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('coffee_icon.png') %>
  </head>

  <body>
    <div>

    <section class="site-header container">
      <a href="/">
        <%= render partial: "prismic_fragment", locals: { fragment: @site_header_doc.fragments['title'] } %> 
      </a>

      <div class="social-links">
        <% @social_link_docs.each do |social_link| %>
          <%= render partial: "prismic_social_link", locals: { social_link: social_link, size_multiplier: 1.5 } %>
        <% end %>
      </div>

      <%= render partial: "prismic_fragment",  locals: { fragment: @site_header_doc.fragments['subtitle'] } %>
    </section> 

    <div class="content-container">
      <%= yield %>
    </div>

    </div>
  </body>
</html>
