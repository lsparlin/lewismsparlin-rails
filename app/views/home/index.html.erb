
<div class="home">
  <section class="blog-section container">

    <div class="intro">
      <%= render partial: "prismic_fragment", locals: { fragment: @site_header_doc.fragments['bio'] } %>
    </div>

    <h1 class="title">Blog</h1>

    <div class="row">
      <% @blog_post_docs.each do |doc| %>
        <div class="blog-listing four columns">
          <a href='<%= "blog/#{doc.uid}" %>'>
            <img src="<%= doc.fragments['title-image-small'].main.url %>" height="160rem" />
            <%= render partial: "prismic_fragment",  locals: { fragment: doc.fragments['title'] } %>
            <%= render partial: "prismic_fragment",  locals: { fragment: doc.fragments['subtitle'] } %>
          </a>
        </div>
      <% end %>
    </div>

  </section>
</div>
